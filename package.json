{
  "name": "flex-splitter-directive",
  "version": "0.3.1",
  "description": "Dead simple pane-splitter control based on flexbox.",
  "license": "WTFPL",
  "repository": "luncheon/flex-splitter-directive",
  "main": "index.min.js",
  "module": "index.min.js",
  "files": [
    "index.js",
    "index.min.js",
    "styles.css",
    "styles.min.css",
    "styles2.css",
    "styles2.min.css",
    "src"
  ],
  "keywords": [
    "layout",
    "splitter",
    "split-pane",
    "split-panes",
    "split-layout",
    "vanilla",
    "vanilla-js"
  ],
  "scripts": {
    "clean": "node -e \"const fs=require('fs');['index.js','index.min.js','styles1.min.css','styles2.min.css'].forEach(f=>fs.existsSync(f)&&fs.unlinkSync(f))\"",
    "build": "npm-run-all clean build:*",
    "build:js": "tsc -p . && terser -c -m -o index.min.js index.js && gzip-size index.min.js",
    "build:css": "cleancss styles.css -o styles.min.css && cleancss styles2.css -o styles2.min.css && gzip-size styles.min.css && gzip-size styles2.min.css",
    "watch": "npm-run-all clean -p watch:*",
    "watch:js": "sane \"npm run build:js\" --glob=\"src/index.ts\"",
    "watch:css": "sane \"npm run build:css\" --glob=\"src/styles.styl\""
  },
  "devDependencies": {
    "clean-css-cli": "^5.6.0",
    "gzip-size-cli": "^5.1.0",
    "npm-run-all": "^4.1.5",
    "sane": "^5.0.1",
    "terser": "^5.13.1",
    "typescript": "^4.7.2"
  },
  "prettier": {
    "printWidth": 140
  }
}
